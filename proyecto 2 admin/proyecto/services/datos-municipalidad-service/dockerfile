# ======== Etapa de construcción ========
FROM python:3.11.9-slim AS builder

LABEL maintainer="Augusto Fuenzalida <augusto@utalca.cl>" \
    version="1.0" \
    description="Microservicio FastAPI - datos-municipalidad-service"

WORKDIR /app

# Instalar dependencias del sistema necesarias para compilar
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    gcc \
    g++ \
    libmagic-dev \
    && rm -rf /var/lib/apt/lists/*

# Copiar requirements y crear wheels
COPY requirements.txt .
RUN pip install --no-cache-dir --upgrade pip --timeout 300 --retries 3 && \
    pip wheel --no-cache-dir -r requirements.txt -w /wheels --timeout 300 --retries 3

# ======== Etapa de ejecución ========
FROM python:3.11.9-slim

LABEL maintainer="Augusto Fuenzalida <augusto@utalca.cl>" \
    version="1.0" \
    description="Microservicio FastAPI - datos-municipalidad-service"

WORKDIR /app

# Instalar solo las dependencias de runtime necesarias
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    libmagic1 \
    curl \
    wget \
    file \
    && rm -rf /var/lib/apt/lists/*

# Copiar wheels desde la etapa de construcción
COPY --from=builder /wheels /wheels

# Instalar dependencias desde wheels
RUN pip install --no-cache-dir /wheels/* && \
    rm -rf /wheels && \
    find /usr/local -type d -name '__pycache__' -exec rm -rf {} + && \
    find /usr/local -type f -name '*.pyc' -delete

# Copiar aplicación
COPY . .

# Crear directorios y usuario no-root
RUN mkdir -p /app/uploads /app/temp && \
    useradd -m appuser && \
    chown -R appuser:appuser /app

USER appuser

ENV PORT=8006
EXPOSE ${PORT}

HEALTHCHECK --interval=30s --timeout=10s --start-period=10s --retries=5 \
    CMD ["sh", "-c", "curl -f http://localhost:${PORT}/health || exit 1"]

# Ejecutar la aplicación (expande ${PORT} mediante sh -c)
CMD ["sh", "-c", "uvicorn main:app --host 0.0.0.0 --port ${PORT}"]